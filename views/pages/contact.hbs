<div class="mb-5">
    <h1 class="text-center">Any suggestion? ğŸ‘‹</h1>

    <form class="mt-5 col-md-6 col-md-offset-3 mx-auto" method="post">

        {{> errors}}

        <!-- name -->
        <div class="mb-3">
            <label for="name" class="form-label"><i class="fas fa-user"></i> Your name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Your name goes here"
                value={{name}}>
        </div>

        <!-- email address -->
        <div class="mb-3">
            <label for="email" class="form-label"><i class="fas fa-envelope"></i> Your email address</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                placeholder="Your email address goes here" value={{email}}>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <!-- message -->
        <div class="mb-3">
            <label for="message" class="form-label"><i class="fas fa-comments"></i> Your message</label>
            <textarea class="form-control" name="message" id="message" rows="3">{{message}}</textarea>
        </div>

        <div class="row justify-content-center px-1">
            <button type="submit" class="btn btn-primary col-12 col-md-6"><i class="fas fa-paper-plane"></i> Send message</button>
        </div>
    </form>
</div>