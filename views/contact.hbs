<div class="mb-5">
    <h1 class="text-center">{{title}} 👋</h1>

    <form class="mt-5 col-md-6 col-md-offset-3 mx-auto" method="post">

        {{#each errors}}
        <div class="alert alert-danger">{{this.msg}}</div>
        {{/each}}

        <!-- name -->
        <div class="mb-3">
            <label for="name" class="form-label">Your name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Your name goes here"
                value={{name}}>
        </div>

        <!-- email address -->
        <div class="mb-3">
            <label for="email" class="form-label">Your email address</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                placeholder="Your email address goes here" value={{email}}>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <!-- message -->
        <div class="mb-3">
            <label for="message" class="form-label">Your message</label>
            <textarea class="form-control" name="message" id="message" rows="3">{{message}}</textarea>

        </div>

        <button type="submit" class="btn btn-primary">✉️ Send message</button>
    </form>
</div>